/*
 * CEUS Studenten und Prüfungen - Faktentabellen 
 */

interface Matrikelnummer : DimTable(mandant="true") {
    base KNZ:varchar(len="20");
    // Attribute:
    // Geschlecht
    // Geburtsdatum
    // Alter
    // HZB-Art
    // HZB-Jahr ...
    // alles das ausschließlich Personenbezogen ist 
    // und sich nicht im Zeitverlauf ändert. 
}

interface Student : FactTable(mandant="true") {
    base KNZ:int(primary_key="true"); 

    ref Semester.KNZ(primary_key="true");
    ref Matrikelnummer.KNZ;

    fact Anzahl_F:decimal(len="1,0"); // Anzahl Studenten
}

interface Studienverlauf : FactTable(mandant="true", history="true") {
    base KNZ:int(primary_key="true");

    ref Semester.KNZ(primary_key="true");
    ref Student.KNZ;
    ref POVersion.KNZ;

    fact Anzahl_F:decimal(len="1,0");
}

interface Pruefung : FactTable(mandant="true", history="true") {
    base KNZ:int(primary_key="true");

    ref Semester.KNZ(primary_key="true");
    ref Studienverlauf.KNZ;

    fact Anzahl_F:decimal(len="1,0");
    fact Note_F:decimal(len="1,2");
}

interface Praktikum : FactTable(mandant="true", histroy="true") {
    base KNZ:int(primary_key="true");

    ref Semester.KNZ(primary_key="true");
    ref Studienverlauf.KNZ;

    fact Anzahl_F:decimal(len="1,0");
    fact Dauer_F:int;
}

interface Auslandsaufenthalt : FactTable(mandant="true", histroy="true") {
    base KNZ:int(primary_key="true");

    ref Semester.KNZ(primary_key="true");
    ref Studienverlauf.KNZ;

    fact Anzahl_F:decimal(len="1,0");
    fact Dauer_F:int;
}